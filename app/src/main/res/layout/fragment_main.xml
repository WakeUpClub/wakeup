<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@drawable/mian_background"
    tools:context=".view.activity.RegisterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayBlue">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="签到"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_menu_share" />
    </RelativeLayout>

    <!--此文本框描述当前用户积分等信息-->
    <TextView
        android:id="@+id/tv_rank"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="排行榜"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/mainColor"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">



        <com.wakeup.forever.wakeup.widget.ColorArcProgressBar
            android:id="@+id/cpb_signTime"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:back_color="@color/bitGray"
            app:back_width="5dp"
            app:front_color1="@color/colorAccent"
            app:front_width="10dp"
            app:is_need_content="true"
            app:is_need_unit="true"
            app:max_value="100"
            app:is_need_title="true"
            app:string_title="你的累计签到次数为:"
            app:string_unit="次"
            app:total_engle="360">
        </com.wakeup.forever.wakeup.widget.ColorArcProgressBar>


    </RelativeLayout>

   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:layout_marginTop="30dp"
       >
       <Button
           android:id="@+id/btn_sign"
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:paddingRight="32dp"
           android:paddingLeft="32dp"

           android:text="签到"
           android:shadowColor="@color/mainColor"
           android:background="@drawable/circle_rectangle"
           >
       </Button>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/flower_btn"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="20dp"
           />

   </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/btn_calendar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"

            android:text="查看我的签到记录"
            android:shadowColor="@color/mainColor"
            android:background="@drawable/circle_rectangle"
            >
        </Button>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/flower_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>




</LinearLayout>

</ScrollView>

